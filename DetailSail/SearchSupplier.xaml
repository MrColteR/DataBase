<Window x:Class="DetailSail.SearchSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DetailSail"
        mc:Ignorable="d"
        Title="SearchSupplier" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgSearchSupplier" Margin="10,10,10,105"/>
        <Button x:Name="btClose" Content="Close" HorizontalAlignment="Left" Margin="661,375,0,0" VerticalAlignment="Top" FontSize="18" Click="btClose_click" Width="90"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Margin="65,375,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <Button x:Name="btSearch" Content="Search" HorizontalAlignment="Left" Margin="256,374,0,0" VerticalAlignment="Top" FontSize="18" Click="btSearch_click" Width="90"/>

    </Grid>
</Window>
