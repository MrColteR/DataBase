<Window x:Class="DetailSail.HistoryPriceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DetailSail"
        mc:Ignorable="d"
        Title="HistoryPriceWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgHistoryPrice" Margin="10,10,10,105"/>
        <Button x:Name="tbAdd" Content="Add" HorizontalAlignment="Left" Margin="30,370,0,0" VerticalAlignment="Top" FontSize="18" Width="90" Click="tbAdd_Click"/>
        <Button x:Name="tbDelete" Content="Delete" HorizontalAlignment="Left" Margin="165,370,0,0" VerticalAlignment="Top" FontSize="18" Width="90" Click="tbDelete_Click"/>
        <Button x:Name="tbUpdate" Content="Update" HorizontalAlignment="Left" Margin="310,370,0,0" VerticalAlignment="Top" FontSize="18" Width="90" Click="btExport_Click"/>
        <Button x:Name="tbClose" Content="Close" HorizontalAlignment="Left" Margin="660,370,0,0" VerticalAlignment="Top" FontSize="18" Width="90" Click="tbClose_Click"/>
        <Button x:Name="btExport" Content="Export" HorizontalAlignment="Left" Margin="449,370,0,0" VerticalAlignment="Top" FontSize="18" Width="90" Click="btExport_Click"/>

    </Grid>
</Window>
